<%= form_with model: @question, local: true do |form| %>
  <div>
    <%= form.label :author, "投稿者名" %><br>
    <%= form.text_field :author %>
  </div>
  
  <div>
    <%= form.label :title, "タイトル" %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body, "内容" %><br>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit "質問を投稿する" %>
  </div>
<% end %>