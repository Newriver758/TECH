<h1>質問詳細</h1>

<p>タイトル: <%= @question.title %></p>
<p>質問内容: <%= @question.content %></p>
<p>投稿者: <%= @question.name %></p>

<h2>回答を投稿する</h2>
<%= form_with(model: [@question, @answer], local: true) do |form| %>
  <%= form.text_area :content, placeholder: "回答する" %><br>
  <%= form.text_field :name, placeholder: "投稿者名" %><br>
  <%= form.submit "POST" %><br>
<% end %>

<% @answers.each do |answer| %>
  回答：<%= answer.content %><br>
  投稿者名：<%= answer.name %><br><br>
<% end %>
